{
    "agent": {
        "type": "object",
        "required": [
            "id",
            "configuration",
            "input",
            "strategy"
        ],
        "properties": {
            "id": {
                "type": "string"
            },

            "configuration": {
                "type": "object"
                // see "configuration" object definition - adp_json_config.json5
            },

            "strategy": {
                "oneOf": [
                    {
                        "type": "object"
                        // see "strategy" object definition - adp_json_strategy.json5}
                    },
                    {
                        "type": "string",
                        "enum": [
                            "simple",
                            "react"
                        ]
                    }
                ],
            },

            "tools": {
                "type": "array",
                "items": {
                    "type": "object"
                    // see "tool" object definition - adp_json_tool.json5
                }
            },

            "input_type": {
                // JSON Schema to define the input structure (domain entity / Kotlin data class)
                "oneOf": [
                    {
                        "type": "string"
                    },
                    {
                        "type": "number"
                    },
                    {
                        "type": "integer"
                    },
                    {
                        "type": "boolean"
                    },
                    {
                        "type": "object",
                        "required": [],
                        // Array of keys from "properties"
                        "properties": {
                            "type": "object",
                            // Object of input type field names with types
                            // "propertyOne": {
                            //   "type": "string"
                            // },
                            // "propertyTwo": {
                            //   "type": "integer"
                            // }
                        }
                    }
                ]
            },

            "input": {
                "type": "string"
            },

            "output_type": {
                // JSON Schema to define the input structure (domain entity / Kotlin data class)
                "oneOf": [
                    {
                        "type": "string"
                    },
                    {
                        "type": "number"
                    },
                    {
                        "type": "integer"
                    },
                    {
                        "type": "boolean"
                    },
                    {
                        "type": "object",
                        "required": [],
                        // Array of keys from "properties"
                        "properties": {
                            "type": "object",
                            // Object of input type field names with types
                            // "propertyOne": {
                            //   "type": "string"
                            // },
                            // "propertyTwo": {
                            //   "type": "integer"
                            // }
                        }
                    }
                ]
            },

            "features": {
                "type": "array",
                "items": {
                    "type": "string"
                    // Koog feature id
                }
            },
        }
    }
}
